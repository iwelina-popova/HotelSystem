@model HotelSystem.Web.Areas.Profile.ViewModels.Info.InfoViewModel

@{
    ViewBag.Title = "Info";
}

<div class="rooms text-center room-custom">
    <div class="container">
        <h3>Hello @Model.User.FirstName @Model.User.LastName</h3>
        @if (Model.Bookings.Any())
        {
            @Html.Partial("_UserGreeting")
        }
        else
        {
            @Html.Partial("_EmptyList")
        }
        <div class="room-grids">
            @Html.Partial("_BookingDisplay", Model.Bookings)

            <div class="clearfix"></div>
        </div>
    </div>
</div>



