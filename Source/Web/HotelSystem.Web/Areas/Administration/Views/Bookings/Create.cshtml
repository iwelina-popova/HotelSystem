@model HotelSystem.Web.Areas.Administration.ViewModels.Bookings.BookingInputModel

@{
    ViewBag.Title = "Create hotel";
}

<br />
<h2 class="text-center">@ViewBag.Title</h2>

<div class="container">
    @using (Html.BeginForm("Create", "Bookings", FormMethod.Post, new { @class = "custom-form", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-md-8 col-md-offset-2 form-group">
            @Html.LabelFor(m => m.HotelName)
            @Html.TextBoxFor(m => m.HotelName, new { htmlAttributes = new { @class = "textbox" } })
            @Html.ValidationMessageFor(m => m.HotelName, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-8 col-md-offset-2 form-group">
            @Html.LabelFor(m => m.RoomType)
            @Html.DropDownListFor(
                        m => m.RoomType,
                        EnumHelper.GetSelectList(typeof(HotelSystem.Data.Models.RoomType)),
                        new { @class = "custom-dropdown" })
        </div>
        <div class="col-md-8 col-md-offset-2 form-group">
            @Html.LabelFor(m => m.BookedFrom)
            @Html.EditorFor(m => m.BookedFrom, new { htmlAttributes = new { @class = "textbox" } })
            @Html.ValidationMessageFor(m => m.BookedFrom, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-8 col-md-offset-2 form-group">
            @Html.LabelFor(m => m.BookedTo)
            @Html.EditorFor(m => m.BookedTo, new { htmlAttributes = new { @class = "textbox" } })
            @Html.ValidationMessageFor(m => m.BookedTo, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-8 col-md-offset-2 form-group">
            @Html.LabelFor(m => m.FirstName)
            @Html.TextBoxFor(m => m.FirstName, new { htmlAttributes = new { @class = "textbox" } })
            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-8 col-md-offset-2 form-group">
            @Html.LabelFor(m => m.LastName)
            @Html.TextBoxFor(m => m.LastName)
            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-8 col-md-offset-2 form-group">
            @Html.LabelFor(m => m.Phone)
            @Html.TextBoxFor(m => m.Phone)
            @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-8 col-md-offset-2 form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-8 col-md-offset-2 form-group">
            @Html.LabelFor(m => m.CardNumber)
            @Html.TextBoxFor(m => m.CardNumber)
            @Html.ValidationMessageFor(m => m.CardNumber, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-8 col-md-offset-2 form-group">
            <div class="col-md-4 col-md-push-3">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
            <div class="col-md-4 col-md-push-2">
                @Html.ActionLink("Back", "Index", "Bookings", new { area = "Administration" }, new { @class = "btn btn-success" })
            </div>
        </div>
                }
</div>
