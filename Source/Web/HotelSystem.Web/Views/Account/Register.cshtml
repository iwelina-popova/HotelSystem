@model HotelSystem.Web.ViewModels.Account.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="package">
    <div class="container">
        <h3 class="text-center">Registration</h3>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "custom-form", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger text-center" })
            <div class="col-md-8 col-md-offset-2 form-group">
                <span>@Html.LabelFor(m => m.Email)</span>
                @Html.TextBoxFor(m => m.Email, new { @class = "textbox" })
            </div>
            <div class="col-md-8 col-md-offset-2 form-group">
                <span>@Html.LabelFor(m => m.Password)</span>
                @Html.PasswordFor(m => m.Password, new { @class = "textbox" })
            </div>
            <div class="col-md-8 col-md-offset-2 form-group">
                <span>@Html.LabelFor(m => m.ConfirmPassword)</span>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "textbox" })
            </div>
            <div class="col-md-8 col-md-offset-2 form-group">
                <span>@Html.LabelFor(m => m.FirstName)</span>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "textbox" })
            </div>
            <div class="col-md-8 col-md-offset-2 form-group">
                <span>@Html.LabelFor(m => m.LastName)</span>
                @Html.TextBoxFor(m => m.LastName, new { @class = "textbox" })
            </div>
            <div class="col-md-8 col-md-offset-2 form-group">
                @{
                    List<SelectListItem> days = new List<SelectListItem>();
                    for (int i = 1; i <= 31; i++)
                    {
                        days.Add(new SelectListItem
                        {
                            Text = i.ToString(),
                            Value = i.ToString()
                        });
                    }
                }
                @Html.DropDownListFor(m => m.Day, days, new { @class = "arrival birth-date" })

                @{
                    List<SelectListItem> months = new List<SelectListItem>();
                    for (int i = 1; i <= 12; i++)
                    {
                        months.Add(new SelectListItem
                        {
                            Text = new DateTime(1, i, 1).ToString("MMMM"),
                            Value = i.ToString()
                        });
                    }
                }
                @Html.DropDownListFor(m => m.Month, months, new { @class = "arrival birth-date" })

                @{ 
                    List<SelectListItem> years = new List<SelectListItem>();
                    var startYear = DateTime.UtcNow.Year - 16;
                    for (int i = 1920; i < startYear; i++)
                    {
                        years.Add(new SelectListItem
                        {
                            Text = i.ToString(),
                            Value = i.ToString()
                        });
                    }
                }
                @Html.DropDownListFor(m => m.Year, years, new { @class = "arrival birth-date"})
            </div>
            <div class="form-group">
                <div class="col-md-6 col-md-offset-3">
                    <input type="submit" value="Register" />
                </div>
            </div>
                    }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
